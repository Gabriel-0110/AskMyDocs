{
  "name": "AskMyDocs (Python 3.12)",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",

  "customizations": {
    "codespaces": {
      "openFiles": ["README.md", "streamlit_app.py"]
    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "postCreateCommand": "pip install -U pip && pip install -r requirements.txt",
  "updateContentCommand": "[ -f requirements.txt ] && pip install -r requirements.txt || true",

  "postAttachCommand": {
    "server": "streamlit run streamlit_app.py --server.address 0.0.0.0 --server.port 8501"
  },

  "portsAttributes": {
    "8501": { "label": "Streamlit", "onAutoForward": "openPreview" }
  },
  "forwardPorts": [8501],

  "features": {}
}
