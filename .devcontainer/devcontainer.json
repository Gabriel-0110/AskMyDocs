{
  "name": "AskMyDocs (Python 3.12 + uv)",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",

  "customizations": {
    "codespaces": {
      "openFiles": ["README.md", "src/ui/streamlit_app.py"]
    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "astral-sh.uv"              // uv VS Code extension (optional, nice)
      ]
    }
  },

  // Install uv and create venv after container is created
  "postCreateCommand": "pip install -U pip && pip install uv && uv venv .venv && .venv/bin/python -m uv pip install -r requirements.txt",

  // Keep requirements synced if you change repo content
  "updateContentCommand": "[ -f requirements.txt ] && .venv/bin/python -m uv pip install -r requirements.txt || true",

  // Run Streamlit with the venv Python
  "postAttachCommand": {
    "server": ".venv/bin/python -m streamlit run src/ui/streamlit_app.py --server.address 0.0.0.0 --server.port 8501"
  },

  "portsAttributes": {
    "8501": { "label": "Streamlit", "onAutoForward": "openPreview" }
  },
  "forwardPorts": [8501],

  "features": {}
}
