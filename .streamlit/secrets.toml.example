# Supabase Configuration
[supabase]
url = "https://your-project-ref.supabase.co"
publishable_default_key = "sb_publishable_your_publishable_key_here"
service_key = "sb_secret_your_service_key_here"
anon_key = "your_anon_jwt_token_here"

# OpenAI Configuration
[openai]
api_key = "sk-proj-your_openai_api_key_here"
embedding_model = "text-embedding-ada-002"
chat_model = "gpt-4o-mini"

# RAG System Configuration
[rag]
chunk_size = 1000
chunk_overlap = 200
max_tokens_per_chunk = 1500
similarity_threshold = 0.7
max_context_chunks = 10

# Streamlit Configuration
[streamlit]
port = 8501
host = "localhost" #Change this for 0.0.0.0 if deploying to the Cloud

# Logging Configuration
[logging]
level = "INFO"
file = "rag_system.log"
