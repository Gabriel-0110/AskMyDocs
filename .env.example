# .env.example  (do NOT commit .env)

# === OpenAI (standard) ===
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# --- If you use Azure OpenAI instead, use these instead of the 3 lines above ---
# AZURE_OPENAI_API_KEY=
# AZURE_OPENAI_ENDPOINT=https://<resource>.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=gpt-4o
# AZURE_OPENAI_API_VERSION=2024-08-01-preview

# === Supabase (server-side only) ===
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# === RAG tuning ===
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS_PER_CHUNK=1500
SIMILARITY_THRESHOLD=0.2
MAX_CONTEXT_CHUNKS=10

# === Streamlit (startup.sh will pass --server.port=$PORT on Azure) ===
STREAMLIT_HOST=0.0.0.0
# Use this only for local dev; Azure ignores it in favor of $PORT
STREAMLIT_PORT=8502

# === Logging / runtime ===
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Optional: if you want to force the entrypoint for startup.sh
# APP_MODULE=app:app
# APP_SERVER=uvicorn
